<div id="poststuff">
    <form id="post-body" class="metabox-holder columns-2" method="post">

        <input type="hidden" name="action" value="{{action}}"/>
        <!-- Content -->
        <div id="post-body-content">



            <div id="post-body">
                <div id="post-body-heading">
                    <h3>Slides</h3>
                    <span class="wp-media-buttons-icon"></span>
                    <div class="huge-it-newuploader uploader button button-primary add-new-image">
                        <input type="button" class="button wp-media-buttons-icon" name="_unique_name_button" id="_unique_name_button" value="Add Image Slide">
                    </div>
                </div>
                <ul id="images-list" class="ui-sortable">
                    {{#images}}
                        <li class="ui-sortable-handle">
                            <div class="image-container">
                                <img src="{{image_url}}">
                                <div>
                                    <input type="hidden" name="image_url[]" value="{{image_url}}">
                                    <span class="wp-media-buttons-icon"></span>
                                    <div class="uploader add-new-image">
                                        <input type="button" class="button1 wp-media-buttons-icon editimageicon" name="_unique_name_button1" value="Edit image">
                                    </div>
                                </div>
                            </div>
                            <div class="image-options">
                                <div>
                                    <label for="name-{{id}}">Title:</label>
                                    <input class="text_area" type="text" id="name-{{id}}" name="name[]" value="{{name}}">
                                </div>
                                <div>{{{description_editor}}}</div>
                                <div class="link-block">
                                    <label for="image_link-{{id}}">URL:</label>
                                    <input class="text_area url-input" type="text" id="image_link-{{id}}" name="image_link[]" value="{{image_link}}">
                                    <label class="long" for="link_target-{{id}}">Open in new tab</label>
                                    <input class="link_target" type="hidden" name="link_target-{{id}}" value="off">
                                    <input class="link_target" type="checkbox" id="link_target-{{id}}" name="link_target-{{id}}" {{#image_link_new_window}}checked{{/image_link_new_window}}>

                                    <!--<input type="checkbox" name="pause_on_hover" id="pause_on_hover"  checked="checked"  class="link_target"/>-->
                                </div>
                                <div class="remove-image-container">
                                    <a class="button remove-image" href="admin.php?page=elegant_slider&task=delete_image&id={{id}}">Remove Image</a>
                                </div>
                            </div>

                            <div class="clear"></div>
                        </li>
                    {{/images}}
                </ul>
            </div>

        </div>

        <!-- SIDEBAR -->
        <div id="postbox-container-1" class="postbox-container">
            <div id="side-sortables" class="meta-box-sortables ui-sortable">
                <div id="slider-unique-options" class="postbox">
                    <h3 class="hndle"><span>Current Slider Options</span></h3>
                    <ul id="slider-unique-options-list">

                        <li>
                            <label for="auto_play">Autoplay Slider</label>
                            <input type="hidden" name="auto_play" value="off">
                            <input type="checkbox" name="auto_play" id="auto_play" {{#auto_play}}checked{{/auto_play}}>
                        </li>
                        <li>
                            <label for="auto_play_pause_speed">Pause time</label>
                            <input type="text" name="auto_play_pause_speed" id="auto_play_pause_speed" value="{{auto_play_pause_speed}}" class="text_area">
                        </li>
                        <!--<li>-->
                            <!--<label for="sl_changespeed">Change speed</label>-->
                            <!--<input type="text" name="sl_changespeed" id="sl_changespeed" value="800" class="text_area">-->
                        <!--</li>-->

                        <li>
                            <label for="light_box">Use Light Box?</label>
                            <input type="checkbox" name="light_box" value="on" id="light_box" {{#light_box}}checked{{/light_box}} >
                        </li>
                        <li>
                            <label for="popup_only">Only Use Light Box?</label>
                            <input type="hidden" name="popup_only" value="off">
                            <input type="checkbox" name="popup_only" id="popup_only" {{#popup_only}}checked{{/popup_only}}>
                        </li>
                    </ul>
                    <div id="major-publishing-actions">
                        <div id="publishing-action">
                            <input type="submit" value="Save Slider" id="save-buttom" class="button button-primary button-large">
                        </div>
                        <div class="clear"></div>
                        <!--<input type="button" onclick="window.location.href='admin.php?page=sliders_huge_it_slider'" value="Cancel" class="button-secondary action">-->
                    </div>
                </div>
            </div>
            <div id="slider-shortcode-box" class="postbox shortcode ms-toggle">
                <h3 class="hndle"><span>Usage</span></h3>
                <div class="inside">
                    <ul>
                        <li rel="tab-1" class="selected">
                            <h4>Shortcode</h4>
                            <p>Copy &amp; paste the shortcode directly into any WordPress post or page.</p>
                            <textarea class="full" readonly="readonly">[elegant_slider id="{{id}}"]</textarea>
                        </li>
                        <li rel="tab-2">
                            <h4>Template Include</h4>
                            <p>Copy &amp; paste this code into a template file to include the slideshow within your theme.</p>
                            <textarea class="full" readonly="readonly">&lt;?php echo do_shortcode("[elegant_slider id='{{id}}']"); ?&gt;</textarea>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </form>
</div>
